--boss
function spawn_boss(n)
	gap=(128-8*n)/(n+1)
	for i=1,n do
		new_boss={
			x=gap*i+8*(i-1),
			y=-20,
			life=20,
			speed=0.8
		}
		add(boss, new_boss)
		end
end

function update_boss()
	for bo in all(boss) do
		bo.y+=bo.speed
		if bo.y>128 then
			bo.y=-8
		end
		--collide
		for b in all(bullets) do
			if collide(bo,b) then
				create_explosion(b.x+4,b.y+2)
				del(bullets,b)
				bo.life-=1
				if bo.life==0 then
					del(boss,bo)
					sfx(2)
					score+=10000
					state=1
				end
			end
		end
	end
end
