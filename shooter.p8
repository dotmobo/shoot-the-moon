--enemies
function spawn_enemies(n)
	gap=(128-8*n)/(n+1)
	for i=1,n do
		new_enemy={
			x=gap*i+8*(i-1),
			y=-20,
			life=3,
			speed=0.5
		}
		add(enemies, new_enemy)
		end
end

function update_enemies()
	for e in all(enemies) do
		e.y+=e.speed
		if e.y>128 then
			del(enemies,e)
		end
		--collide
		for b in all(bullets) do
			if collide(e,b) then
				create_explosion(b.x+4,b.y+2)
				del(bullets,b)
				e.life-=1
				if e.life==0 then
					del(enemies,e)
					sfx(2)
					score+=100
				end
			end
		end
	end
end
